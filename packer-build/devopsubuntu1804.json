{
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><wait>",
                "<esc><wait>",
                "<enter><wait>",
                "/install/vmlinuz<wait>",
                " auto<wait>",
                " console-setup/ask_detect=false<wait>",
                " console-setup/layoutcode=us<wait>",
                " console-setup/modelcode=pc105<wait>",
                " debconf/frontend=noninteractive<wait>",
                " debian-installer=en_US<wait>",
                " fb=false<wait>",
                " initrd=/install/initrd.gz<wait>",
                " kbd-chooser/method=us<wait>",
                " keyboard-configuration/layout=USA<wait>",
                " keyboard-configuration/variant=USA<wait>",
                " locale=en_US<wait>",
                " netcfg/get_domain=ubuntu1804.com<wait>",
                " netcfg/get_hostname=devops<wait>",
                " grub-installer/bootdev=/dev/sda<wait>",
                " noapic<wait>",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
                " -- <wait>",
                "<enter><wait>"
            ],
            "boot_wait": "10s",
            "disk_size": 40960,
            "guest_os_type": "Ubuntu_64",
            "headless": true,
            "http_directory": "http",
            "iso_urls": [
                "http://cdimage.ubuntu.com/releases/18.04.3/release/ubuntu-18.04.3-server-amd64.iso"
            ],
            "iso_checksum_type": "sha256",
            "iso_checksum": "7d8e0055d663bffa27c1718685085626cb59346e7626ba3d3f476322271f573e",
            "ssh_username": "vagrant",
            "ssh_password": "password",
            "ssh_port": 22,
            "ssh_wait_timeout": "12000s",
            "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "devopsubuntu1804",
            "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "2560"],
            ["modifyvm", "{{.Name}}", "--cpus", "2"]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "mods",
            "destination": "/home/vagrant/"
        },
        {
            "type": "shell",
            "execute_command": "echo 'password' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "inline": [
                "/home/vagrant/mods/01-init.sh",
                "/home/vagrant/mods/02-vagrant_init.sh",
                "/home/vagrant/mods/03-groups-users-creation.sh",
                "/home/vagrant/mods/04-git.sh install",
                "/home/vagrant/mods/05-python3.sh install",
                "/home/vagrant/mods/05.1-pip3.sh install",
                "/home/vagrant/mods/06-ansible.sh install",
                "/home/vagrant/mods/07-java.sh install",
                "/home/vagrant/mods/08-jenkins.sh install",
                "/home/vagrant/mods/09-terraform.sh install",
                "/home/vagrant/mods/10-docker.sh install",
                "/home/vagrant/mods/11-awscli.sh install",
                "/home/vagrant/mods/12-subversion.sh install",
                "/home/vagrant/mods/13-ruby.sh install",
                "/home/vagrant/mods/14-azurecli.sh install",
                "/home/vagrant/mods/15-gcloudsdk.sh install",
                "/home/vagrant/mods/16-node_exporter.sh install",
                "/home/vagrant/mods/17-prometheus.sh install",
                "/home/vagrant/mods/18-grafana.sh install",
                "/home/vagrant/mods/19-alertmanager.sh install",
                "/home/vagrant/mods/20-aws-vault.sh install",
                "/home/vagrant/mods/21-hugo.sh install",
                "/home/vagrant/mods/22-gogs.sh install",
                "/home/vagrant/mods/23-go.sh install",
                "/home/vagrant/mods/24-osquery.sh install",
                "/home/vagrant/mods/25-packer.sh install",
                "/home/vagrant/mods/26-inspec.sh install",
                "/home/vagrant/mods/27-trivy.sh install",
                "/home/vagrant/mods/28-serverspec.sh install"
            ]
        },
        {
             "type": "inspec",
             "profile": "https://github.com/darkwizard242/inspec-git",
             "user": "vagrant"
        },
        {
            "type": "file",
            "source": "serverspec-tests",
            "destination": "/home/vagrant/"
        },
        {
            "type": "shell",
            "execute_command": "echo 'password' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts": [
                "mods/init_serverspec_tests.sh",
                "mods/cleanup.sh"
            ]
        }
    ],
    "post-processors": [{
      "type": "vagrant",
      "compression_level": "9",
      "output": "output/devopsubuntu1804.box"
    }]
  }
